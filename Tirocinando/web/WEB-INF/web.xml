<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Servlet_db</servlet-name>
        <servlet-class>it.unimol.tirocinio.utils.db.Servlet_db</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet_auth</servlet-name>
        <servlet-class>it.unimol.tirocinio.utils.auth.Servlet_auth</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet_db</servlet-name>
        <url-pattern>/Servlet_db</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet_auth</servlet-name>
        <url-pattern>/Servlet_auth</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
